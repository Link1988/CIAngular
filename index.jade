link(rel='stylesheet', href='vendor/libs/bootstrap/dist/css/bootstrap.min.css')
script(type='text/javascript', src='vendor/libs/angular/angular.js')
script(type='text/javascript', src='vendor/libs/angular-resource/angular-resource.js')
script(type='text/javascript', src='/app/app.js')
script(type='text/javascript', src='/app/jobs.js')
        
body(ng-app='app')
    .container
        div(ng-controller='testCtrl')
            h1 Post a New Job
            form(ng-submit="submit()")
                .form-group
                    input.form-control(placeholder="Title" ng-model="title")
                .form-group
                    textarea.form-control(placeholder="Description" ng-model="description")
                .form-group
                    button.btn.btn-primary(type="submit") Post
            
            h1 Find a Job Today!
                .list-group
                    a.list-group-item(href='#')(ng-repeat="job in jobs")
                        h4.list-group-item-heading {{ job.title }}
                        p.list-group-item-text {{ job.description }}
